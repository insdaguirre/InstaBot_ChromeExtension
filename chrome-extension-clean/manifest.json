{
  "manifest_version": 3,
  "name": "Instagram Automation Helper",
  "version": "2.0",
  "description": "Follow Instagram users and manage timestamped unfollow batches",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instagram Automation",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "batches.json"],
      "matches": ["https://www.instagram.com/*"]
    }
  ]
} 